OUTPUT=ISO
OUTPUT_URL=nfs://{{ nfs.share | replace(':','') }}
ISO_PREFIX={{ ansible_hostname }}
BACKUP=NETFS
BACKUP_PROG_COMPRESS_OPTIONS=( --gzip )
BACKUP_PROG_COMPRESS_SUFFIX=".gz"
BACKUP_PROG_EXCLUDE=( '/tmp/*' '/data/*' '/var/mnt/' '/var/lib/glance/' '/srv/node' )
BACKUP_URL=nfs://{{ nfs.share | replace(':','') }}
BACKUP_PROG_EXCLUDE=("${BACKUP_PROG_EXCLUDE[@]}" '/media' '/var/tmp' '/var/crash')
BACKUP_PROG_OPTIONS+=( --anchored --xattrs-include='*.*' --xattrs )
